{
  "name": "harmony-rehearsal-scheduler",
  "version": "1.0.0",
  "description": "Web application for automatically scheduling band rehearsals, sending reminders, tracking attendance, and suggesting optimal rehearsal times",
  "main": "index.js",
  "scripts": {
    "start": "npm run start:backend",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm start",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dxaginfo/harmony-rehearsal-scheduler.git"
  },
  "keywords": [
    "music",
    "rehearsal",
    "scheduler",
    "band",
    "attendance",
    "calendar",
    "react",
    "node",
    "express",
    "postgresql"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dxaginfo/harmony-rehearsal-scheduler/issues"
  },
  "homepage": "https://github.com/dxaginfo/harmony-rehearsal-scheduler#readme",
  "devDependencies": {
    "concurrently": "^8.2.1"
  }
}
